@model moni.Models.FPUser
@inject Microsoft.AspNetCore.Identity.UserManager<FPUser> userManager


@{
	//var user = await userManager.GetUserAsync(User);
	//var userHousehold = user.HouseholdId;
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1>@TempData["StatusMessage"]</h1>
	<h1 class="display-4">Welcome To moni Financial Portal</h1>

	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">
		Create Household
	</button>
	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#joinModal">
		Join Household
	</button>
	<form asp-action="Details" asp-controller="Households" asp-route-id="@Model.HouseholdId">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="submit" value="View Your Household" class="btn btn-primary mt-auto" style="" />
	</form>
</div>


<div class="modal fade" id="joinModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form asp-action="Join" asp-controller="Household">
					<div class="form-group">
						<label>Houshold Invitation Code :</label>
						<input type="text" class="form-control" name="Code" />
					</div>

					<input type="submit" value="Join" class="btn btn-primary" />
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

			</div>
		</div>
	</div>
</div>

<!-- Modal create household -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
